<div class="container">
	<h1 class="text-center">Create an Account</h1>
	<h3 class="text-center"><%= link_to('Already have an account?', new_user_session_path)  %></h3>

	<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		<%= f.error_notification %>

	  	<div class="basic-info row">
		  	<h3>Basic Info</h3>
	  		<div class="col-sm-6 col-md-4">
	  			<%= f.label :first_name %>
	  			<%= f.text_field :first_name, class: "form-control" %>
	  		</div>
	  		<div class="col-sm-6 col-md-4">
	  			<%= f.label :last_name %>
	  			<%= f.text_field :last_name, class: "form-control" %>
	  		</div>
	  		<div class="col-sm-6 col-md-4">
	  			<%= f.label :email %>
	    		<%= f.email_field :email, required: true, autofocus: true, class: "form-control" %>
	    	</div>
				<div class="col-sm-6 col-md-4">
	  			<%= f.label :phone %>
	    		<%= f.text_field :phone, required: true, autofocus: true, class: "form-control" %>
	    	</div>
	  		<div class="col-sm-6 col-md-4">
	  			<%= f.label "Password" %>
			    <%= f.password_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), class: "form-control" %>
		    </div>
	  		<div class="col-sm-6 col-md-4">
	    		<%= f.label "Confirm Password" %>
	    		<%= f.password_field :password_confirmation, required: true, class: "form-control" %>
			</div>
		</div> <!-- basic info -->

		<div class="row">
			<hr class="col-xs-6 col-xs-push-3">
		</div>

		<%= f.input :opt_in, label: "Let me know when you have something that might interest me." %>

	    <div class="form-actions text-center">
	    	<%= f.button :submit, "Sign up" %><br />
	    	<%= render "devise/shared/links" %>
	    </div>
	<% end %>


</div> <!-- container -->

<div class="bottom-buffer"></div>
