<div class="image-container">
	<%= image_tag "houses.jpg", alt: "Houses on a hill overlooking the ocean in Laguna Beach, California." %>
</div>

<div class="container">
  <h1 class="text-center">Listings</h1>

  <% @listings.each do |listing| %>
    <% property = Rubillow::HomeValuation.zestimate({ zpid: listing.zpid }) %>
    <% deep_search_results = Rubillow::PropertyDetails.deep_search_results({ address: listing.address, citystatezip: listing.citystatezip }) %>
    <% rillow = Rillow.new('X1-ZWz1frh4ucm4nf_8l13j') %>

    <%= link_to listing_path(listing) do %>
      <% result = rillow.get_updated_property_details(listing.zpid) %>
      <div class="fancy-border property-details">
        <div class="row">
					
          <div class="status-box">
            <h4><%= listing.status %></h4>
            <% if current_user && current_user.admin %>
              <%= link_to edit_listing_path(listing) do %>
                <i class="icon ion-edit"></i>
              <% end %>
              <%= link_to listing, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <i class="icon ion-trash-a"></i>
              <% end %>
            <% end %>
          </div>

          <h2><%= listing.address %></h2>

          <div class="col-sm-3 text-center">
            <%#= image_tag result.to_hash['response'].first['images'].first['image'].first['url'].first %>
            ZPID: <%= link_to deep_search_results.links[:homedetails] do %><span class="linkish"><%= listing.zpid %></span><% end %>
          </div> <!-- images -->

          <div class="col-sm-9">
            <h4 style="color: green">Zestimate: <%= number_to_currency(property.price) %></h4>
            <p><%= deep_search_results.finished_square_feet %> Square Feet, <%= pluralize(deep_search_results.bedrooms, "Bedroom") %>, <%= pluralize(deep_search_results.bathrooms, "Bathroom") %></p>
            <p><em><%= listing.notes %></em></p>
          </div> <!-- col 9 -->
        </div> <!-- row -->
      </div> <!-- fancy border -->
    <% end %> <!-- link -->
  <% end %> <!-- listing each -->

  <div class="bottom-buffer"></div>

  <div class="text-center">
    <p>Information Courtesy of</p>
    <a href="https://www.zillow.com/"><%= image_tag "zillow.png", alt: "Real Estate on Zillow", style: "width: 200px" %></a>
  </div> <!-- right zillow logo -->

  <div class="text-center"><% if current_user && current_user.admin %><%= link_to 'New Listing', new_listing_path %><% end %></div>
  <div class="bottom-buffer"></div>
</div> <!-- container -->
