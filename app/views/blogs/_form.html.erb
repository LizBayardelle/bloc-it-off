<%= form_for @blog, html: { multipart: true } do |f| %>

  <div class="form-inputs">
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :teaser %>
      <%= f.text_field :teaser, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.file_field :image, as: :file %>
    </div>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.cktext_area :body, class: "form-control" %>
    </div>
  </div>

  <div class="form-actions text-center">
    <%= f.button :submit %>
  </div>
<% end %>
